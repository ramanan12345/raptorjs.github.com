<c:template
    xmlns:c="core"
    xmlns:w="widgets"
    name="components/editors/CodeEditor"
    params="tag,textareaAttrs,title">
    
    <div w:widget="components.editors.CodeEditor.CodeEditorWidget" class="code-editor">
        <h2 class="code-editor-title" c:if="title">$title</h2>        
        <textarea id="${widget.elId('textarea')}" c:attrs="textareaAttrs" style="display: none;"><c:invoke c:if="tag.invokeBody" function="tag.invokeBody"/></textarea>
    </div>
    
</c:template>